class Solution {
    public int maxSubArray(int[] nums) {
        int sum = 0;
        int max = nums[0];
        
        for(int i = 0; i < nums.length; ++i) {
            if(nums[i] > sum && sum < 0) {
                sum = nums[i];
            }
            else {
                sum = sum + nums[i];
            }
            if(sum > max) {
                max = sum;
            }
        }
        return max;
    }
}
